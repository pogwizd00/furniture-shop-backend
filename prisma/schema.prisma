// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int             @id @default(autoincrement())
  firstName  String          @db.VarChar(255)
  lastName   String          @db.VarChar(255)
  email      String          @unique
  password   String          @db.VarChar(255)
  furnitures UserFurniture[]
}

model UserFurniture {
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int
  firnitures   Furnitures @relation(fields: [furnituresId], references: [id], onDelete: Cascade)
  furnituresId Int

  @@id([userId, furnituresId])
}

model Furnitures {
  id       Int    @id @default(autoincrement())
  type     String @db.VarChar(255)
  specific String @unique
  price    Int

  producer   Producer        @relation(fields: [producerId], references: [id], onDelete: Cascade)
  producerId Int
  users      UserFurniture[]
}

model Producer {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  about      String       @db.VarChar(255)
  Furnitures Furnitures[]
}

model Orders {
  id             Int      @id @default(autoincrement())
  email          String
  country        String
  residence      String
  postalCode     String
  phoneNumber    String
  price          Int
  detailsToOrder String?
  dateOfOrder    DateTime @default(now())
}
